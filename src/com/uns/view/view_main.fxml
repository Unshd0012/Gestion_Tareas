<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<Pane fx:id="paneMain" prefHeight="300.0" prefWidth="400.0" styleClass="login-pane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uns.controller.ControllerViewMain">

    <!-- Imagen -->
    <ImageView fx:id="logoImageView" fitHeight="102.0" fitWidth="129.0" layoutX="157.0" layoutY="20.0" styleClass="login-image" />

    <Label layoutX="50.0" layoutY="140.0" text="Username:" />
    <TextField fx:id="usernameField" layoutX="150.0" layoutY="136.0" />

    <Label layoutX="50.0" layoutY="180.0" text="Password:" />
    <PasswordField fx:id="passwordField" layoutX="150.0" layoutY="176.0" />

    <Button fx:id="loginButton" layoutX="250.0" layoutY="220.0" onAction="#handleLoginButtonAction" text="Login" />
   <Label fx:id="messageLogin" layoutX="50.0" layoutY="269.0" prefHeight="17.0" prefWidth="249.0" />

</Pane>
